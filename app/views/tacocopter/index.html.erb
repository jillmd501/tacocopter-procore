<h1 style="text-align:center">Tacocopter</h1>
<p style="text-align:center">Select your specifications below:</p>

<h3>Choose your filling:</h3>

<form action="/search" method="get" name="search">
  <% @tacos.map do |taco| %>
  	<input type="checkbox" name="tacos[]" value="<%= taco.id %>">
  	<%= taco.name %>
  	<br>
  	<% end %>

<h3>Choose your salsa:</h3>

  <% @salsas.map do |salsa| %>
 	<input type="checkbox" name="salsas[]" value="<%= salsa.id %>">
 	 <%= salsa.name %>
  	 <br>
  	<% end %>
  <br>
  <br>
  <input type="submit" value="Search">
</form>
 